<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:padding="10dp" android:id="@+id/message_single_layout">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/message_profile_layout"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_alignParentRight="false"
        android:src="@drawable/default_avatar" />

   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_toRightOf="@+id/message_profile_layout"
       android:layout_alignParentTop="true"
       android:layout_marginLeft="10dp"
       android:id="@+id/linearLayout3"
       android:padding="0dp"
       android:layout_alignParentLeft="false"
       android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_toRightOf="@+id/message_profile_layout"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dp"
        android:id="@+id/linearLayout2">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Display Name"
            android:textStyle="normal"
            android:textSize="16sp"
            android:id="@+id/name_text_layout"
            android:textColor="@color/colorBlack"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/message_time_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:textColor="#666"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/message_text_layout" />
    </LinearLayout>

    <TextView
        android:id="@+id/message_text_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Message goes here"
        android:layout_toRightOf="@+id/message_profile_layout"
        android:textSize="17sp"
        android:layout_below="@+id/linearLayout2"
        android:layout_marginLeft="10dp" />

</LinearLayout>

</RelativeLayout>