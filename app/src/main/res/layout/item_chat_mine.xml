<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:gravity="center_vertical"
    android:paddingBottom="@dimen/padding_small"
    android:paddingEnd="@dimen/padding_avg"
    android:paddingRight="@dimen/padding_avg"
    android:paddingStart="@dimen/padding_avg"
    android:paddingTop="@dimen/padding_small">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_view_chat_message_a"
        android:background="@drawable/message_text_background_right"
        android:layout_marginStart="@dimen/margin_huge"
        android:layout_marginLeft="@dimen/margin_huge"
        android:layout_alignParentEnd="true"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/md_grey_700"
        android:padding="5dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:text="Notice Man! jika pesanya panjang akan seperti ini"
        android:layout_alignParentRight="true" />

    <ImageView
        android:id="@+id/message_picture_a"
        android:layout_below="@+id/text_view_chat_message_a"
        android:padding="5dp"
        android:scaleType="center"
        android:layout_marginRight="4dp"
        android:layout_marginLeft="@dimen/margin_huge"
        android:layout_width="match_parent"
        android:background="@drawable/message_text_background_right"
        android:layout_height="200dp" />

</RelativeLayout>